<div class="show_index">
<% @runs.each do |run| %>
  <div class="run_box">

  <div  class="run_column">
      <table>
      <tr>
        <td> <img class="index_img" src="/assets/small_coin_moving.gif"> </td>
        <td> <%= run.coin_counter %> </td>
      </tr>
       <tr>
        <td> <img class="index_img" src="/assets/mushroom_moving.gif"> </td>
        <td> <%= run.mushroom_counter %> </td>
      </tr>
       <tr>
        <td> <img class="index_img" src="/assets/turtle_moving_small.gif"> </td>
        <td> <%= run.turtle_counter %> </td>
      </tr>

        </table>
    </div>

    <div class="run_column_longer">
        <p> <span> Run Date: </span> <%= run.locations.first.created_at.strftime("%B %d, %Y") %> </p>
        <p> <span> Total Run Time: </span>  <%= (run.locations.last.created_at - run.locations.first.created_at).round(2) %> seconds </p>
        <p><span> Total Run Distance: </span> <%= (run.locations.last.cumulative_distance).round(2) %> metres </p>
        <p> <span> Average Running Pace: </span> <%= ((run.locations.last.cumulative_distance/(run.locations.last.created_at - run.locations.first.created_at))*3.6).round(2) %> km/hr </p>
        <p> <span> Total steps: </span> <%= run.steps %> steps </p>
    </div>

  </div>


<% end %>

</div>


